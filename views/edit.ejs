<% include ./partials/header %>
<div class="ui text container segment ">
    <div class="ui huge header">Edit <%= blogs.tittle %></div>
        <form class="ui form" action="/blogs/<%=blogs._id %>?_method=put" method="Post">
         <div class="field">
             <label>Tittle</label>
             <input type="text" name="blogs[tittle]" value="<%= blogs.tittle %>">
         </div>
         <div class="field">
             <label>Image</label>
             <input type="text" name="blogs[image]" value="<%= blogs.image %>">
         </div>
         <div class="field">
             <label>Blog Content</label>
             <textarea name="blogs[blogbody]"><%= blogs.blogbody %></textarea>
         </div>
         <input type="submit" class="ui basic violet huge button">
        </form>
</div>
<% include ./partials/footer %>